{
  "actions" : {
    "build" : {
      "postActions" : [
        {
          "script" : "mdbook build ",
          "type" : "runScript"
        }
      ]
    },
    "clean" : {
      "postActions" : [
        {
          "script" : "mdbook clean",
          "type" : "runScript"
        }
      ]
    },
    "run" : {
      "enabled" : true,
      "postActions" : [
        {
          "script" : "mdbook serve",
          "type" : "runScript"
        }
      ]
    }
  },
  "openLogOnRun" : "start"
}
